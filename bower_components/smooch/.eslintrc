{
    "parser": "babel-eslint",
    "rules": {
        "quotes": [
            2,
            "single"
        ],
        "jsx-quotes": [
            2,
            "prefer-single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "react/jsx-uses-vars": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-no-undef": 2,
        "no-unused-vars": 1,
        "no-extra-boolean-cast": 0,
        "no-console": 0,
        "no-constant-condition": 0,
        "no-redeclare": 0,
        "prefer-const": 2,
        "arrow-parens": [2, "always"],
        "mocha/no-exclusive-tests": "error",
        "mocha/handle-done-callback": "error"
    },
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true,
        "browser": true
    },
    "globals": {
        "VERSION": true
    },
    "plugins": [
        "react",
        "mocha"
    ],
    "ecmaFeatures": {
        "jsx": true
    },
    "extends": "eslint:recommended"
}
